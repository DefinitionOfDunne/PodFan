extends layout

block content
  .container
    h2.subtitle Create An Account!
    br
    form(class='auth-form' role='form', action="/register",method="post")
      .form-group
        label Username
            input.form-control(type='text', name="username", placeholder='Pick A Username')
      .form-group
        label Password
          input.form-control(type='password', name="password", placeholder='Choose A Password')
      button.btn.btn-primary#submit(type='submit') Register
      &nbsp;
      a(href='/')
        button.btn.btn-default(type="button") Cancel